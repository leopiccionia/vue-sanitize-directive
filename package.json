{
  "name": "vue-sanitize-directive",
  "version": "0.2.1",
  "description": "Vue directive for HTML sanitization.",
  "author": {
    "name": "Leonardo Piccioni de Almeida",
    "email": "leopiccionia@gmail.com"
  },
  "keywords": [
    "vue",
    "sanitization",
    "sanitize",
    "v-sanitize"
  ],
  "type": "module",
  "main": "./dist/vue3/vue-sanitize-directive.cjs",
  "module": "./dist/vue3/vue-sanitize-directive.js",
  "exports": {
    ".": {
      "import": "./dist/vue3/vue-sanitize-directive.js",
      "require": "./dist/vue3/vue-sanitize-directive.cjs"
    },
    "./vue2": {
      "import": "./dist/vue2/vue-sanitize-directive.js",
      "require": "./dist/vue2/vue-sanitize-directive.cjs"
    },
    "./vue3": {
      "import": "./dist/vue3/vue-sanitize-directive.js",
      "require": "./dist/vue3/vue-sanitize-directive.cjs"
    }
  },
  "scripts": {
    "build": "tsup --minify"
  },
  "license": "MIT",
  "dependencies": {
    "sanitize-html": "^2.7.3"
  },
  "devDependencies": {
    "@types/sanitize-html": "^2.6.2",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "vue2": "npm:vue@^2.7.14",
    "vue3": "npm:vue@^3.2.45"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leopiccionia/vue-sanitize-directive.git"
  },
  "bugs": {
    "url": "https://github.com/leopiccionia/vue-sanitize-directive/issues"
  },
  "homepage": "https://leopiccionia.github.io/vue-sanitize-directive"
}
